  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.0",
    "kill-port": "^2.0.1",
    "killport": "^1.0.2",
    "mongoose": "^6.8.3",
    "nodemon": "^2.0.20",
    "passport": "^0.6.0",
    "react-router-dom": "^6.6.1",
    "socket.io": "^4.5.4"
  }
}
